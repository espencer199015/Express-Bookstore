{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "isbn": {
      "type": "string",
      "minLength": 1
    },
    "amazon_url": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "language": {
      "type": "string",
      "minLength": 1
    },
    "pages": {
      "type": "integer",
      "minimum": 1
    },
    "publisher": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "year": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["isbn", "author", "title", "year"],
  "additionalProperties": false
}